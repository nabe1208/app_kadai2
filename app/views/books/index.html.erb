<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="books.scss" type="text/css">
</head>

<body>

 <h2>Books</h2>
<!--一覧表示-->

<!--@books = Book.all-->
 <% @books.each do |book| %> <!--eachに＝は不要-->

  <div class="record">

   <p>title</p>
   <span><%= book.title %></span>

   <p>body</p>
   <span><%= book.body %></span>

   <span>
    <%= link_to "show",book_path(book.id) %><!--変更必要-->
   </span>

  </div>

 <% end %>



<!--投稿機能フォーム-->

<h2>New book</h2>
<!--@book = Book.new-->
 <%= form_with model:@book do |f| %><!--Viewに使用するフォームのヘルパーメソッド-->

  <h4>Title</h4>
  <%= f.text_field :title %>

  <h4>Body</h4>
  <%= f.text_area :body %>

  <%= f.submit "create Book" %>

 <% end %>




</body>

